@model QuanLyShopDienTu.Models.SanPham

@{
    ViewData["Title"] = "Xóa Sản Phẩm";
}

<h1>Xóa Sản Phẩm</h1>

<h3>Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
<div class="alert alert-danger">
    Hành động này không thể hoàn tác.
</div>

<div>
    <h4>Thông tin Sản Phẩm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Hình Ảnh</dt>
        <dd class="col-sm-9">
            <img src="~/images/products/@Model.HinhAnhUrl" alt="@Model.TenSanPham" style="width: 150px; height: 150px; object-fit: cover;" />
        </dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TenSanPham)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.TenSanPham)</dd>

        <dt class="col-sm-3">Danh Mục</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.DanhMuc.TenDanhMuc)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.GiaTien)</dt>
        <dd class="col-sm-9">@Model.GiaTien.ToString("N0") đ</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SoLuong)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.SoLuong)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MoTa)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.MoTa)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xác Nhận Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>