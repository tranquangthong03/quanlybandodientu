@model QuanLyShopDienTu.Models.DanhMuc

@{
    ViewData["Title"] = "Chỉnh Sửa Danh Mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --purity-teal: #4fd1c5;
        --purity-teal-hover: #38b2ac;
        --text-gray: #a0aec0;
        --text-dark: #2d3748;
    }

    .page-header {
        margin-bottom: 1.5rem;
    }

    .breadcrumb-text {
        font-size: 0.85rem;
        color: var(--text-gray);
    }

    .page-title {
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 0;
    }

    /* Card Style */
    .card-purity {
        background: #fff;
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.02);
        padding: 30px;
    }

    /* Label & Input */
    .form-label-purity {
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--text-gray);
        text-transform: uppercase;
        margin-bottom: 8px;
        margin-left: 4px;
    }

    .form-control-purity {
        border-radius: 12px;
        border: 1px solid #e2e8f0;
        padding: 12px 15px;
        font-size: 0.95rem;
        color: var(--text-dark);
        transition: all 0.2s;
    }

        .form-control-purity:focus {
            border-color: var(--purity-teal);
            box-shadow: 0 0 0 2px rgba(79, 209, 197, 0.2);
        }

    /* Buttons */
    .btn-purity-primary {
        background: linear-gradient(135deg, #4fd1c5 0%, #319795 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 700;
        padding: 12px 30px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.8rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: all 0.3s;
    }

        .btn-purity-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 8px rgba(0,0,0,0.15);
            color: white;
        }

    .btn-link-gray {
        color: var(--text-gray);
        font-weight: 600;
        text-decoration: none;
        font-size: 0.9rem;
        padding: 10px 20px;
        transition: color 0.2s;
    }

        .btn-link-gray:hover {
            color: var(--text-dark);
        }
</style>

<div class="container-fluid py-4">
    <div class="page-header text-center">
        <span class="breadcrumb-text">Pages / Quản lý danh mục</span>
        <h3 class="page-title mt-1">Cập Nhật Danh Mục</h3>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card-purity">
                <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
                    <h5 class="font-weight-bold mb-0" style="color: var(--text-dark);">
                        <i class="fas fa-edit me-2 text-info"></i> Thông tin chỉnh sửa
                    </h5>
                    <span class="badge bg-light text-secondary border">ID: #@Model.Id</span>
                </div>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-4">
                        <label asp-for="TenDanhMuc" class="form-label-purity">Tên Danh Mục</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0" style="border-radius: 12px 0 0 12px; border-color: #e2e8f0;">
                                <i class="fas fa-tag text-muted"></i>
                            </span>
                            <input asp-for="TenDanhMuc" class="form-control form-control-purity border-start-0" style="border-radius: 0 12px 12px 0;" placeholder="Nhập tên danh mục..." />
                        </div>
                        <span asp-validation-for="TenDanhMuc" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mt-5">
                        <a asp-action="Index" class="btn-link-gray">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-purity-primary">
                            <i class="fas fa-save me-2"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}