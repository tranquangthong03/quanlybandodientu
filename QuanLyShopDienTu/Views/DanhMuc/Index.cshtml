@model IEnumerable<QuanLyShopDienTu.Models.DanhMuc>

@{
    ViewData["Title"] = "Quản Lý Danh Mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Danh Mục Sản Phẩm</h1>
    <a asp-action="Create" class="btn btn-primary btn-icon-split shadow-sm">
        <span class="icon text-white-50"><i class="fas fa-plus"></i></span>
        <span class="text">Thêm Mới</span>
    </a>
</div>

<div class="card card-custom mb-4">
    <div class="card-header-custom py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Dữ liệu danh mục</h6>

        <form asp-action="Index" method="get" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control bg-light border-0 small"
                       placeholder="Tìm tên danh mục..." value="@ViewData["CurrentFilter"]" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>
                @if (ViewData["CurrentFilter"] != null)
                {
                    <a asp-action="Index" class="btn btn-secondary ms-1" title="Hủy lọc">
                        <i class="fas fa-sync-alt"></i>
                    </a>
                }
            </div>
        </form>
    </div>

    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle" width="100%" cellspacing="0">
                <thead class="table-light text-center">
                    <tr>
                        <th width="10%">ID</th>
                        <th width="60%" class="text-start">Tên Danh Mục</th>
                        <th width="30%">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center fw-bold text-secondary">#@item.Id</td>
                                <td class="fw-bold text-primary">
                                    <i class="fas fa-folder me-2 text-warning"></i> @item.TenDanhMuc
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm btn-circle" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm btn-circle ms-2"
                                       onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục: @item.TenDanhMuc?');" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5 text-muted">
                                <img src="https://cdn-icons-png.flaticon.com/512/7486/7486754.png" width="64" class="mb-3 opacity-50" /><br />
                                Không tìm thấy dữ liệu nào phù hợp.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>